{
  "name": "@marqeta/marqeta-mcp",
  "version": "1.0.3",
  "description": "MCP server with tools generated from OpenAPI specs",
  "main": "dist/src/index.js",
  "type": "module",
  "bin": {
    "marqeta-mcp": "./bin/marqeta-mcp.js"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "marqeta",
    "ai"
  ],
  "author": "Marqeta, Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marqeta/marqeta-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/marqeta/marqeta-mcp/issues"
  },
  "homepage": "https://github.com/marqeta/marqeta-mcp#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "generate-tools": "node dist/scripts/generate-tools.js",
    "postbuild": "npm run generate-tools",
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.12.0",
    "dotenv": "^17.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.15.0",
    "glob": "^11.0.0",
    "jest": "^30.1.3",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0",
    "zod-to-json-schema": "^3.23.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
